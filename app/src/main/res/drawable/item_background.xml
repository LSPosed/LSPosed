    xmlns:tools="http://schemas.android.com/tools"
    android:color="?colorPrimary"
    tools:ignore="PrivateResource">

    <item
        android:id="@android:id/mask"
        android:bottom="4dp"
        android:end="8dp"
        android:left="8dp"
        android:top="4dp">
